<!-- Formulaire de contact pop-up -->
<div id="overlay"></div>
  <div id="contact_formulaire">
  <div id="close" class="close" onclick="closeContact(); off()"><i class="fa fa-times"></i></div>
			<form id="contact-form" action="contact.html.erb" method="post">
				<aside class="alert d-none"></aside>
				<ul class="list-unstyled">
					<!--<li class="form-group">
						<label for="name">Nom*</label>
						<input type="text" class="form-control" id="name" name="name" placeholder="NOM Prénom" required/>
					</li>-->
					<li class="col-formulaire">
						<label for="nom">Nom*</label>
						<input type="text" class="form-control" id="nom" name="nom" placeholder="NOM" required/>
						<label for="prénom">Prénom*</label>
						<input type="text" class="form-control" id="prénom" name="prénom" placeholder="Prénom" required/>
					</li>
					<li class="form-group">
						<label for="email">Email*</label>
						<input type="email" class="form-control" id="email" name="email" placeholder="votre_email@mail.com" required/>
          			</li>
          			<li class="form-group">
						<label for="tel">Téléphone</label>
						<input type="tel" class="form-control" id="tel" name="tel" placeholder="0123456789">
					</li>
					<li class="form-group">
						<label for="subject">Sujet*</label>
						<input type="text" class="form-control" id="subject" name="subject" placeholder="Ex : Inscription" required/>
					</li>
					<li class="form-group">
						<label for="message">Message*</label>
						<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Description ..." required/></textarea>
					</li>
					<li class="form-group">
						<center><button class="btn btn-primary">Envoyer</button></center>
					</li>
				</ul>
			</form>
  </div>
  <!-- / Formulaire de contact pop-up -->
